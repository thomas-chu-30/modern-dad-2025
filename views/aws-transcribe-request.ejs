<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AWS Transcribe Demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
      .container {
        max-width: 800px;
        margin-top: 50px;
      }
      #result {
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">AWS Transcribe Demo</h1>

      <div class="card">
        <div class="card-body">
          <form id="uploadForm">
            <div class="mb-3">
              <label for="audioFile" class="form-label">選擇音訊檔案</label>
              <input type="file" class="form-control" id="audioFile" accept="audio/*" required />
            </div>
            <button type="submit" class="btn btn-primary">開始轉錄</button>
          </form>
        </div>
      </div>

      <div id="result" class="card d-none">
        <div class="card-body">
          <h5 class="card-title">轉錄結果</h5>
          <div id="transcriptionText"></div>
        </div>
      </div>

      <div id="loading" class="text-center d-none">
        <div class="spinner-border" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2">正在處理中，請稍候...</p>
      </div>
    </div>

    <script>
      document.getElementById("uploadForm").addEventListener("submit", async (e) => {
        e.preventDefault();

        const fileInput = document.getElementById("audioFile");
        const file = fileInput.files[0];

        if (!file) {
          alert("請選擇音訊檔案");
          return;
        }

        const formData = new FormData();
        formData.append("audio", file);

        // 顯示載入中
        document.getElementById("loading").classList.remove("d-none");
        document.getElementById("result").classList.add("d-none");

        try {
          const response = await fetch("/api/transcribe", {
            method: "POST",
            body: formData,
          });

          const data = await response.json();

          if (data.error) {
            throw new Error(data.error);
          }

          // 顯示結果
          document.getElementById("transcriptionText").textContent = data.transcription;
          document.getElementById("result").classList.remove("d-none");
        } catch (error) {
          alert("發生錯誤：" + error.message);
        } finally {
          document.getElementById("loading").classList.add("d-none");
        }
      });
    </script>
  </body>
</html>
